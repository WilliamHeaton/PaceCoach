<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wgheaton.pacecoach"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/android_whistle"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <uses-library android:name="com.google.android.maps" />

        <service
            android:name="com.cypho.pacecoach.PositionLogger"
            android:process=":logger_process" />

        <activity
            android:name="com.cypho.pacecoach.History"
            android:label="@string/title_activity_history" 
        	android:theme="@android:style/Theme.Holo.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name=".Running" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cypho.pacecoach.Running"
            android:label="@string/title_activity_running"
            android:launchMode="singleTask"
       		android:theme="@android:style/Theme.Holo.NoActionBar" >
            
        </activity>
        <activity
            android:name="com.cypho.pacecoach.Settings"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
       		android:theme="@android:style/Theme.Holo.NoActionBar" >
            
        </activity>
        <activity
            android:name="com.cypho.pacecoach.SettingsVoiceAlerts"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
       		android:theme="@android:style/Theme.Holo.NoActionBar" >
            
        </activity>
        <activity
            android:name="com.cypho.pacecoach.SettingsPlan"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
       		android:theme="@android:style/Theme.Holo.NoActionBar" >
            
        </activity>
        <activity
            android:name="com.cypho.pacecoach.SettingsConfigPages"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:noHistory="true"
       		android:theme="@android:style/Theme.Holo.NoActionBar" >
            
        </activity>
        <activity
            android:name="com.cypho.pacecoach.ReviewRun"
            android:label="@string/title_activity_history" 
            android:noHistory="true"
       		android:theme="@android:style/Theme.Holo.NoActionBar" >
            
        </activity>
    </application>

</manifest>