<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/split_heading"
        style="@style/splitrow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/splits"
            style="@style/splitRowSplits" />

        <TextView
            android:id="@+id/total"
            style="@style/splitRowTotal" />
    </LinearLayout>

    <include
        android:id="@+id/split_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/splits_row" />
    
    <LinearLayout
        android:id="@+id/split_units"
        style="@style/splitrow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/splitRowNo" />

        <TextView
            android:id="@+id/splitDu"
            style="@style/splitRowD" />

        <TextView
            style="@style/splitRowT" />

        <TextView
            android:id="@+id/splitSu"
            style="@style/splitRowS" />

        <TextView
            android:id="@+id/splitTDu"
            style="@style/splitRowTD" />

        <TextView
            style="@style/splitRowTT" />
    </LinearLayout>
	
    <ListView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false" />

</LinearLayout>