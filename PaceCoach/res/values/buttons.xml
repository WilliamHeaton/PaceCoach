<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="buttons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/cell_padding</item>
        <item name="android:layout_marginRight">@dimen/cell_padding</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">15sp</item>
        
    </style>
    
	<style name="splitbutton" parent="buttons">
        <item name="android:background">@drawable/button_split</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
	<style name="runbutton" parent="buttons">
        <item name="android:background">@drawable/button_start</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="logbutton" parent="buttons">
        <item name="android:background">@drawable/button_searching</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="settingsbutton" parent="buttons">
        <item name="android:background">@drawable/button_searching</item>
        <item name="android:layout_width">60dp</item>
    </style>
    
    
    
	<style name="searchingbutton" parent="buttons">
        <item name="android:background">@drawable/button_searching</item>
    </style>
	<style name="pausebutton" parent="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.30</item>
        <item name="android:background">@drawable/button_stop</item>
    </style>
	<style name="warmupbutton" parent="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.70</item>
        <item name="android:background">@drawable/button_start</item>
    </style>
	<style name="workoutbutton" parent="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.30</item>
        <item name="android:background">@drawable/button_start</item>
    </style>
	<style name="cooldownbutton" parent="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.70</item>
        <item name="android:background">@drawable/button_start</item>
    </style>
	<style name="stopbutton" parent="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.30</item>
        <item name="android:background">@drawable/button_stop</item>
    </style>
	<style name="resumebutton" parent="buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.70</item>
        <item name="android:background">@drawable/button_start</item>
    </style>
    
	
</resources>